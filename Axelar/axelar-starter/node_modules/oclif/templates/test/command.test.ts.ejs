import {expect, test} from '@oclif/test'

describe('<%- name %>', () => {
  test
  .stdout()
  .command(['<%- name %>'])
  .it('runs hello', ctx => {
    expect(ctx.stdout).to.contain('hello world')
  })

  test
  .stdout()
  .command(['<%- name %>', '--name', 'jeff'])
  .it('runs hello --name jeff', ctx => {
    expect(ctx.stdout).to.contain('hello jeff')
  })
})
